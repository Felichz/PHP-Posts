{% extends "defaultTemplate.twig.html" %}

{% block head %}
<title>Formulario de Contacto</title>

<style>
    #footer
    {
        display: none;
    }
</style>
{% endblock %}

{% block content %}
    <br>
    <div class="container">
    <div class="row">
        <div class="col">
            <h1>Formulario de Contacto</h1>
        </div>
    </div>
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
                {% if alertDanger %}
                <div class="alert alert-danger">{{ alertDanger }}</div>
                {% endif %}
                {% if alertSuccess %}
                <div class="alert alert-success">{{ alertSuccess }}</div>
                {% endif %}
                <form id="contacto" action="{{ rutas.contactSend }}" method="POST" enctype="multipart/form-data" >
                    <div class="form-group">
                        <label for="email">Email: </label>
                        <input class='form-control' id='email' type="email" name="email" value="{{ old.email }}" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Nombre: </label>
                        <input class='form-control' id='nombre' type="text" name="nombre" value="{{ old.nombre }}" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Mensaje: </label>
                        <textarea class='form-control' name="message" id="message" rows="10" required>{{ old.mensaje }}</textarea>
                    </div>
                    <input class='btn btn-primary' type="submit" value="Enviar">
                    <a class='btn btn-secondary' href="{{ rutas.index }}">Volver</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}